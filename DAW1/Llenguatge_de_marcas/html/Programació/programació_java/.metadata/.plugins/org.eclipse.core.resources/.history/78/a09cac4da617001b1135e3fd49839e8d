import java.util.*;
public class ClassePrincipal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int num;
		int comptador;
		float resultatdiv = 0;
		int comptadordivs = 0;
		
		Scanner teclatnum = new Scanner(System.in);
		
		System.out.println("Introdueix un número");
		num = teclatnum.nextInt();
		
		comptador = num - 1;
		
		while (comptador != 1) {
			resultatdiv = (comptador%num);
			if (resultatdiv == 0) {
				comptadordivs++;
			}
			comptador = comptador - 1;
		}
		if (comptadordivs > 1) {
			System.out.println(num + " no és un número primer");
		} else {
			System.out.println(num + " és un número primer");
		}
	}

}
