<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10px"
    android:background="#64DD17"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvCelsius"
            android:layout_width="340dp"
            android:layout_height="120dp"
            android:layout_marginBottom="5px"
            android:background="#6200EA"
            android:gravity="center"
            android:textSize="32sp"
            app:layout_column="0"
            app:layout_columnSpan="4"
            app:layout_row="0" />

        <TextView
            android:id="@+id/tvCelsiusSimbol"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:background="#FFD600"
            android:gravity="center"
            android:text="ºC"
            android:textSize="32sp"
            app:layout_column="4"
            app:layout_row="0" />

        <TextView
            android:id="@+id/tvConversio"
            android:layout_width="340dp"
            android:layout_height="120dp"
            android:background="#6200EA"
            android:gravity="center"
            android:textSize="32sp"
            app:layout_column="0"
            app:layout_columnSpan="4"
            app:layout_row="1" />

        <TextView
            android:id="@+id/tvConversioSimbol"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:background="#FFD600"
            android:gravity="center"
            android:textSize="32sp"
            app:layout_column="4"
            app:layout_row="1" />

        <Button
            android:id="@+id/b7"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#00B8D4"
            android:onClick="b7"
            android:shadowColor="#C51162"
            android:text="7"
            android:textSize="32sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/b8"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#00B8D4"
            android:onClick="b8"
            android:shadowColor="#C51162"
            android:text="8"
            android:textSize="32sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/b9"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#00B8D4"
            android:onClick="b9"
            android:shadowColor="#C51162"
            android:text="9"
            android:textSize="32sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/ctof"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#C51162"
            android:onClick="ctof"
            android:text="ºC TO F"
            android:textSize="32sp"
            app:layout_column="3"
            app:layout_columnSpan="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/b4"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#00B8D4"
            android:onClick="b4"
            android:shadowColor="#C51162"
            android:text="4"
            android:textSize="32sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/b5"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#00B8D4"
            android:onClick="b5"
            android:shadowColor="#C51162"
            android:text="5"
            android:textSize="32sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/b6"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#00B8D4"
            android:onClick="b6"
            android:shadowColor="#C51162"
            android:text="6"
            android:textSize="32sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/ctok"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#C51162"
            android:onClick="ctok"
            android:text="ºC TO K"
            android:textSize="32sp"
            app:layout_column="3"
            app:layout_columnSpan="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/b1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#00B8D4"
            android:onClick="b1"
            android:shadowColor="#C51162"
            android:text="1"
            android:textSize="32sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/b2"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#00B8D4"
            android:onClick="b2"
            android:shadowColor="#C51162"
            android:text="2"
            android:textSize="32sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/b3"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#00B8D4"
            android:onClick="b3"
            android:shadowColor="#C51162"
            android:text="3"
            android:textSize="32sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/lock"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#C51162"
            android:onClick="bloquear"
            android:text="LOCK"
            android:textSize="32sp"
            app:layout_column="3"
            app:layout_columnSpan="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/b0"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#00B8D4"
            android:onClick="b0"
            android:shadowColor="#C51162"
            android:text="0"
            android:textSize="32sp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="5" />

        <Button
            android:id="@+id/bpunt"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#00B8D4"
            android:onClick="bpunt"
            android:shadowColor="#C51162"
            android:text="."
            android:textSize="32sp"
            app:layout_column="2"
            app:layout_row="5" />

        <Button
            android:id="@+id/borrar"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="5px"
            android:background="#C51162"
            android:onClick="bborrar"
            android:text="BORRAR"
            android:textSize="32sp"
            app:layout_column="3"
            app:layout_columnSpan="2"
            app:layout_row="5" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>