<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BFA5"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="#00BFA5"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <TextView
            android:id="@+id/tvAct"
            android:layout_width="159dp"
            android:layout_height="39dp"
            android:layout_marginRight="30px"
            android:layout_marginBottom="30px"
            android:background="#64DD17"
            android:gravity="left"
            android:text="Activitats"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/tvExamens"
            android:layout_width="159dp"
            android:layout_height="44dp"
            android:layout_marginBottom="30px"
            android:background="#64DD17"
            android:gravity="center|left"
            android:text="ExÃ mens"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/tvNota"
            android:layout_width="match_parent"
            android:layout_height="443dp"
            android:gravity="center"
            android:textColor="#FFD600"
            android:textSize="36sp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/bcalcular"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:background="#FFD600"
            android:gravity="center"
            android:onClick="bcalcular"
            android:text="CALCULAR NOTA"
            android:textColor="#00BFA5"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="2" />

        <EditText
            android:id="@+id/etNotaAct"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#00BFA5"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="0" />

        <EditText
            android:id="@+id/etNotaEx"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="#00BFA5"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="1" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>